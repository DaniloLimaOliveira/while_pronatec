{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block sonata_admin_content %}

    <div class="sonata-ba-content"><div class="sonata-ba-delete">

        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">Confirmar a remoção</h3>
            </div>
            <div class="box-body">

                Você tem certeza que deseja remover o item "{{ Model.asString }}" selecionado?
            </div>
            <div class="box-footer clearfix">
                <form method="POST" action="/admin/diarioClasse/{{Model.getId()}}/delete">
                    <input type="hidden" name="_method" value="DELETE">

                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Sim, remover</button>
                    ou

                    <a class="btn btn-success" href="/admin/diarioClasse/{{Model.getId()}}/register?idAula={{Model.getId()}}">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                        Editar</a>
                </form>
            </div>
        </div>
    </div></div>

{% endblock %}